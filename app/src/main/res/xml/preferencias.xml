<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Datos de usuario" android:key="cat1">
        <EditTextPreference
            android:key="username"
            android:title="Su nombre de usuario"
            android:defaultValue="user123"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
        <EditTextPreference
            android:key="user_email"
            android:title="Su email de usuario"
            android:defaultValue="user123@email.com"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Notificaciones" android:key="cat2">
        <RingtonePreference
            android:defaultValue="content://settings/system/notification_sound"
            android:dependency="notifications_new_message"
            android:key="notifications_new_message_ringtone"
            android:ringtoneType="notification"
            android:title="@string/pref_title_ringtone" />
    </PreferenceCategory>
</PreferenceScreen>